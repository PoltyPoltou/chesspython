#:kivy 2.0.0
<MoveLabel>:
    size_hint:(0.33, None)
    font_size:'20sp'
    size:self.texture_size
    bold: True
    halign:"left"
    valign:"middle"
    moveColor : (0.75,0.75,0.75,1)
    highlighted : False
    color : self.moveColor if not self.highlighted else (1,1,1,1)
    canvas.before:
        Color:
            rgba : self.moveColor if self.highlighted else (0,0,0,0)
        Rectangle:
            pos : self.pos
            size : self.size


<VariationLabel>:
    size_hint:(1, None)
    font_size:'20sp'
    size:self.texture_size
    bold: False
    halign:"left"
    valign:"middle"
    canvas.before:
        Color:
            rgba : (0.25,0.25,0.25,1)
        Rectangle:
            pos : self.pos
            size : self.size
<GridLayoutMinHeight>:
    size_hint:(1, None)
    height: self.minimum_height
<MoveList>:
    gridLayoutRef:gridref
    do_scroll_y:True
    canvas.before:
        Color:
            rgba : (39/255,37/255,34/255,1)
        Rectangle:
            pos : self.pos
            size : self.size
    GridLayoutMinHeight:
        id:gridref
        cols: 1

