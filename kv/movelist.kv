#:kivy 2.0.0
<MoveLabel>:
    size_hint:(1, None)
    font_size:'20sp'
    size:self.texture_size
    text_size: self.size
    bold: True
    halign:"left"
    moveColor : (0.75,0.75,0.75,1)
    highlighted : False
    color : self.moveColor if not self.highlighted else (1,1,1,1)
    canvas.before:
        Color:
            rgba : self.moveColor if self.highlighted else (0,0,0,0)
        Rectangle:
            pos : self.pos
            size : self.size

<VariationLabel>:
    size_hint:(None, None)
    text_size:(None, None)
    size:self.texture_size
    font_size:'15sp'
    bold: False

<VariationBox>:
    size_hint:(1, None)
    height : self.minimum_height
    orientation: 'vertical'
    padding : (10,0,0,0)
    last : True
    canvas.before:
        Color:
            rgba : (0.25,0.25,0.25,1)
        Rectangle:
            pos : self.pos
            size : self.size
        Color:
            rgba : (0.35,0.35,0.35,1)
        Line:
            points : (self.x+3, self.top, self.x+3, self.top-8, self.x+10, self.top-8)
            width : 1.2
            cap : 'square'
            joint : 'miter'
            close : False
        Color:
            rgba : (0.35,0.35,0.35,0 if self.last else 1)
        Line:
            points : (self.x+3, self.top, self.x+3, self.y+2)
            width : 1.2
            cap : 'square'
            joint : 'miter'
            close : False

<VariationStack>:
    size_hint:(1, None)
    spacing:[2,1]
    orientation: 'lr-tb'
    height : self.minimum_height

<GridLayoutMinHeight>:
    cols:1
    size_hint:(1, None)
    height: self.minimum_height
    col_force_default: True
    col_default_width: self.width/self.cols


<MoveList>:
    gridLayoutRef:gridref
    do_scroll_y:True

    canvas.before:
        Color:
            rgba : (39/255,37/255,34/255,1)
        Rectangle:
            pos : self.pos
            size : self.size
    GridLayoutMinHeight:
        id:gridref
        cols: 1

