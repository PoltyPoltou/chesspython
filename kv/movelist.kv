#:kivy 2.0.0
<MoveLabel>:
    size_hint:(0.33, None)
    font_size:'20sp'
    size:self.texture_size
    bold: True
    halign:"left"
    valign:"middle"
    moveColor : (0.75,0.75,0.75,1)
    highlighted : False
    color : self.moveColor if not self.highlighted else (1,1,1,1)
    canvas.before:
        Color:
            rgba : self.moveColor if self.highlighted else (0,0,0,0)
        Rectangle:
            pos : self.pos
            size : self.size

<VariationLabel>:
    size_hint:(None, None)
    size:self.texture_size
    font_size:'15sp'

<VariationBox>:
    size_hint:(1, None)
    height : self.minimum_height
    orientation: 'vertical'
    padding : (10,0,0,0)
    canvas.before:
        Color:
            rgba : (0.25,0.25,0.25,1)
        Rectangle:
            pos : self.pos
            size : self.size

<VariationStack>:
    size_hint:(1, None)
    orientation: 'lr-tb'
    height : self.minimum_height

<GridLayoutMinHeight>:
    cols:1
    size_hint:(1, None)
    height: self.minimum_height
    col_force_default: True
    col_default_width: self.width/self.cols


<MoveList>:
    gridLayoutRef:gridref
    do_scroll_y:True

    canvas.before:
        Color:
            rgba : (39/255,37/255,34/255,1)
        Rectangle:
            pos : self.pos
            size : self.size
    GridLayoutMinHeight:
        id:gridref
        cols: 1

