#:kivy 2.0.0
<MoveLabel>:
    font_size:'15sp'
    size:self.texture_size
    text_size: self.size
    bold: False
    halign:"left"
    valign:"middle"


<MoveList>:
    gridLayoutRef:gridref
    do_scroll_y:True
    GridLayout:
        id:gridref
        cols: 3
        cols_minimum: {0:30, 1:50, 2:50}
        size_hint:(1, None)
        size:(0,0)
        canvas.after:
            Color:
                rgba : (1,1,1,0.5)
            Rectangle:
                pos : self.pos
                size : self.size

