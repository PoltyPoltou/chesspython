#:kivy 2.0.0
<GameButton>:
    text_size: self.size
    halign:"center"
    valign:"middle"
    canvas.before:
        Color:
            rgba:0,0,1,0.5
        Rectangle:
            size:self.size if self.selected else (0,0)
            pos:self.pos
<GameMenu>:
    canvas.before:
        Color:
            rgb:0.3,0.3,0.3
        Rectangle:
            size:self.size
            pos:self.pos