#:kivy 2.0.0

<HeadMoveList>:
    orientation:"vertical"
    computer_variation_widget:computer_variation_widget
    Label:
        text:root.txt
        markup:True
    VariationStack:
        id:computer_variation_widget
        size_hint:1,1
    BoxLayout:
        orientation:"horizontal"
        DepthTracker:
            threadEngine:root.threadEngine
        BoxLayout:
            orientation:"vertical"
            ToggleButton:
                text:"analysis arrow"
                state:"down"
                on_state:root.controller.boardWidget.analysis_arrow = (self.state == "down")
            ToggleButton:
                text:"report arrow"
                state:"down"
                on_state:root.controller.boardWidget.report_arrow = (self.state == "down")

<ComputerVariationLabel>:
    size_hint:None,None
    text_size:(None, None)
    size:self.texture_size
    font_size:'12sp'
<ScoreLabel>:
    bold:True
    valign:"middle"
    canvas.before:
        Color:
            rgb:self.bgColor
        Rectangle:
            pos:self.pos
            size:self.size
<ButtonDepth@Button>:
    canvas.before:
        Color:
            rgb:53/255,134/255,208/255
        Rectangle:
            pos:self.pos
            size:self.size
<DepthTracker>:
    orientation:"horizontal"
    Label:
        text: str(root.actualDepth) + " / " + str(root.defaultDepth)
    BoxLayout:
        orientation:"vertical"
        ButtonDepth:
            text:"+"
            on_press: root.threadEngine.setDefaultDepth(root.threadEngine.getDefaultDepth()+1)
        ButtonDepth:
            text:"-"
            on_press: root.threadEngine.setDefaultDepth(root.threadEngine.getDefaultDepth()-1)