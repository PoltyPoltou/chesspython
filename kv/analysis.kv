#:kivy 2.0.0
#:import c colors
<EvaluationBar>:
    displayedEval : 0
    textEval : "0"
    pov : "WHITE"
    bgColor : (0,0,0) if self.pov == 'WHITE' else (1,1,1)
    barColor : (1,1,1) if self.bgColor == (0,0,0) else (0,0,0)
    sign : ((self.pov == "WHITE") - (self.pov!="WHITE"))
    canvas.before:
        Color:
            rgb:self.bgColor
        Rectangle:
            pos:self.pos
            size:self.size
    canvas:
        Color:
            rgb:self.barColor
        Rectangle:
            pos:self.pos
            size:self.width, 0.5 * self.height * (1 + self.sign * self.displayedEval/10)
    Label:
        canvas:"after"
        color : (0,0,0) if root.displayedEval > 0 else (1,1,1)
        text:root.textEval
        font_size:'12sp'
        bold: True
        halign:"center"
        pos:(root.x,root.top - self.height - (root.sign * root.displayedEval > 0) * (root.height - self.height))
        size:(root.width,20)


<AnalysisProgressBar>:
    progress : 0
    textProgress : "{:.0f}".format(self.progress*100)+"%"
    bgColor : (0.15, 0.15, 0.15, 1)
    barColor : (46/256, 143/256, 72/256, 1)
    canvas.before:
        Color:
            rgba:self.bgColor
        Rectangle:
            pos:self.pos
            size:self.size
    canvas.after:
        Color:
            rgba:self.bgColor
        Line:
            points: (self.x, self.y + self.height/2, self.x + self.width, self.y + self.height/2)
    Label:
        canvas:"after"
        color : (1,1,1)
        text_size:root.size
        text:root.textProgress
        font_size:'12sp'
        bold: True
        valign:"top"
        halign:"left"
        pos:(root.x,root.y)
        size:(root.width,root.height)
