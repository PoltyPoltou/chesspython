#:kivy 2.0.0
#: include kv/board.kv 
#: include kv/analysis.kv
<WindowLayout>:
    orientation : 'horizontal'
    padding : (10,10)
    spacing : 10
    boardGUI : boardGUI
    canvas:
        Color:
            rgb : self.couleurBg
        Rectangle:
            pos : self.pos
            size : self.size
    Label:
        canvas.before:
            Color:
                rgb : (0.5,0.5,0.5)
            Rectangle:
                pos : self.pos
                size : self.size
        text:"left for what ?"
        size_hint : (0.1,1)

    FloatLayout:
        size_hint : (0.8,1)
        id : container
        spacing : 10
        evalWidth : bar.width + self.spacing
        
        EvaluationBar:
            id : bar 
            size_hint : (None, None)
            size : (40, boardGUI.height)
            pos_hint : {'center_y' : 0.5}
            right : boardGUI.right - boardGUI.width - container.spacing
            pov : boardGUI.pov
        BoardWidget:
            id : boardGUI
            size_hint : (None,None)
            size : min(container.width - container.evalWidth, container.height), min(container.width - container.evalWidth, container.height)
            pos_hint: {'center_x' : 0.5 + container.evalWidth/container.width/2, 'center_y' : 0.5}
            evalWidget: bar

    Label:
        canvas.before:
            Color:
                rgb : (0.5,0.5,0.5)
            Rectangle:
                pos : self.pos
                size : self.size
        text:"Right for what ?"
        size_hint : (0.1,1)
